<div
  class="relative w-full mx-auto min-h-screen bg-background flex items-center justify-center p-4"
  data-testid="home-hero"
>
  <div class="max-w-4xl mx-auto text-center space-y-8 px-4 sm:px-8">
    <img
      src="/logo_1.png"
      alt="Paw Notes logo"
      class="mx-auto h-64 w-auto sm:h-72"
      role="img"
    />

    <!-- Description -->
    <p class="text-lg sm:text-xl text-muted-foreground max-w-2xl mx-auto">
      Zapisuj wizyty, leki i wydarzenia. Wszystko w jednym miejscu.
    </p>

    <!-- CTA Button -->
    <div class="flex flex-col sm:flex-row gap-4 justify-center items-center pt-4" data-testid="home-cta">
      <a
        href="/register"
        class="inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-lg font-semibold transition-all disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground shadow-xs hover:bg-primary/90 h-10 px-6 py-2 min-h-[44px] min-w-[200px] w-full sm:w-auto"
        data-testid="hero-cta-button"
        onclick="window.location.href='/register';"
      >
        Rozpocznij za darmo
      </a>
    </div>

    <!-- Login Link -->
    <div class="pt-4">
      <a href="/login" class="text-primary hover:text-primary/80 transition-colors underline text-base sm:text-lg">
        Masz już konto? Zaloguj się
      </a>
    </div>
  </div>
</div>
