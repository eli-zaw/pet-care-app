---
import "../styles/global.css";
import { Toaster } from "@/components/ui/sonner";
import { LogoutButton } from "@/components/auth/LogoutButton";

const { title = "Paw Notes", hideHeader = false } = Astro.props;

// Sprawdzenie stanu u≈ºytkownika dla warunkowego renderowania
const sessionResult = await Astro.locals.supabase.auth.getSession();
const session = sessionResult.data.session;
const isAuthenticated = !!session?.user;
const userEmail = session?.user?.email || null;
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <!-- Skip to main content link for accessibility -->
    {!hideHeader && (
      <a
        href="#main-content"
        class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 bg-primary text-primary-foreground px-4 py-2 rounded-md z-50"
      >
        Przejd≈∫ do tre≈õci g≈Ç√≥wnej
      </a>
    )}

    <!-- Global Header -->
    {!hideHeader && (
      <header class="sticky top-0 z-50 w-full border-b bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60" role="banner">
        <div class="container mx-auto flex h-16 items-center justify-between px-4">
          <!-- Logo and App Name -->
          <a href={isAuthenticated ? "/dashboard" : "/"} class="flex items-center gap-2 hover:opacity-80 transition-opacity" aria-label="Paw Notes - strona g≈Ç√≥wna">
            <div class="text-2xl" aria-hidden="true">üêæ</div>
            <span class="text-lg font-semibold hidden sm:inline">Paw Notes</span>
            <span class="text-lg font-semibold sm:hidden">PN</span>
          </a>

          <!-- Navigation / Actions -->
          <nav class="flex items-center gap-2" role="navigation" aria-label="Nawigacja u≈ºytkownika">
            {isAuthenticated && (
              <>
                {userEmail && (
                  <span class="text-sm text-muted-foreground hidden md:inline" aria-label={`Zalogowany jako ${userEmail}`}>
                    {userEmail}
                  </span>
                )}
                <LogoutButton client:load />
              </>
            )}
          </nav>
        </div>
      </header>
    )}

    <!-- Page Content -->
    <main id="main-content" role="main">
      <slot />
    </main>

    <!-- Global Toast Notifications -->
    <Toaster client:load position="bottom-center" class="sm:!bottom-right sm:!items-end" />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
