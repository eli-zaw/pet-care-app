---
import "../styles/global.css";
import { Toaster } from "@/components/ui/sonner";
import { LogoutButton } from "@/components/auth/LogoutButton";

interface Props {
  title?: string;
  hideHeader?: boolean;
}

const { title = "Paw Notes", hideHeader = false } = Astro.props;

// Sprawdzenie sesji dla warunkowego renderowania przycisku wylogowania
const { data: { session } } = await Astro.locals.supabase.auth.getSession();
const isAuthenticated = !!session?.user;
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <!-- Global Header -->
    {!hideHeader && (
      <header class="sticky top-0 z-50 w-full border-b bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60">
        <div class="container mx-auto flex h-16 items-center justify-between px-4">
          <!-- Logo and App Name -->
          <a href={isAuthenticated ? "/dashboard" : "/"} class="flex items-center gap-2 hover:opacity-80 transition-opacity">
            <div class="text-2xl" aria-hidden="true">üêæ</div>
            <span class="text-lg font-semibold hidden sm:inline">Paw Notes</span>
            <span class="text-lg font-semibold sm:hidden">PN</span>
          </a>

          <!-- Navigation / Actions -->
          <nav class="flex items-center gap-2">
            {isAuthenticated && <LogoutButton client:load />}
          </nav>
        </div>
      </header>
    )}

    <!-- Page Content -->
    <slot />

    <!-- Global Toast Notifications -->
    <Toaster client:load position="bottom-center" class="sm:!bottom-right sm:!items-end" />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
